# Example environment variables for SCP
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:secret@db:5432/postgres

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET_KEY=change-me-to-a-random-secret-key-min-32-chars
JWT_REFRESH_SECRET_KEY=change-me-to-another-random-secret-key-min-32-chars
JWT_ALGORITHM=HS256

# Token Expiry Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
APP_NAME=Supplier Consumer Platform
DEBUG=true
